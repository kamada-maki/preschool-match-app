<%= render "shared/header" %>

<h1>運営者マイページ</h1>
<div class='preschool-contents'>
    <ul class='preschool-lists'>
    <li class='list'>
      <% @preschools.each do |preschool| %>
       <%= link_to preschool_path(preschool.id) do %>
       <div class='preschool-img-content'>
        <% preschool.images.each do |image|%>
        <%= image_tag(preschool.images[0], class:"preschool-img")%> 
       </div>
       <div class='preschool-info'>
        <h3 class='preschool-name'><%= preschool.name %></h3>
        <h3 class='preschool-concept'><%= preschool.concept %></h3>
        </div>
      <% end %>
      <% end %>
      <%unless user_signed_in?%>
      <h2>いいね数<%= preschool.likes.count %></h2>
      <%end%>
      <% if user_signed_in? && current_user.already_liked?(preschool) %>
      <%= link_to "いいね解除",preschool_likes_path(preschool), method: :delete  %>
      <%= preschool.likes.count %>
      <% elsif user_signed_in?  %>
      <%= link_to "いいね！", preschool_likes_path(preschool), method: :post  %>
      <%= preschool.likes.count %>
      <% end %>
       <% if admin_signed_in? && current_admin.id == @preschool.admin_id %>
      <div class="preschool__manage">
      <%= link_to "編集する",  edit_preschool_path(@preschool.id), class: :preschool__btn %>
      <%= link_to "削除する",  preschool_path(@preschool.id), class: :preschool__btn,method: :delete %>
      </div>
      <% end%>
      <% end %>

<% if admin_signed_in? %>
<%= link_to '新規投稿',new_preschool_path, class: 'tweet-btn' %>
<%end%>