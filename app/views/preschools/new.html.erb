<%= render "shared/header" %>

<div class="new-form">
    <div class="new-title">新規投稿</div>
    <%# 表にする %>
    <table>
    <%= form_with(model: @preschool, local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>
  
    <div class="img-upload">
        <div id="image-list"></div>
      <tr>
      <th class="click-upload">画像選択</th>
        <td><%= f.file_field :images, name:'preschool[images][]', id:"preschool-image" %></td>
      </tr>
    </div>
  
    <div class="new-preschools">
      <tr>
        <th class="name">保育園名</th>
        <td><%= f.text_field  :name, class:"preschool-name", id:"preschool-name", placeholder:"〇〇保育園（最大40文字）", maxlength:"40" %></td>
      </tr>
      <tr>
        <th  class="post-number">郵便番号</th>
          <td><%= f.text_field :post_number, class:"preschool-postnumber", placeholder:"123-4567" %></td>
      </tr>
      <tr>
        <th  class="area">所在地</th>
        <td><%= f.collection_select :area_id, Area.all, :id, :name, include_blank: "選択してください",class:"select-box"%>
            <%= f.text_field  :address, class:"preschools-address", id:"preschools-address", placeholder:"天満1-2-3" %>
            <%= f.text_field  :building, class:"preschools-building", id:"preschools-building", placeholder:"ABCビル1階" %></td>
      </tr>
      <tr>
        <th  class="phone-number">電話番号</th>
        <td><%= f.text_field :phone_number, class:"phone-number", placeholder:"例）0612345678",maxlength:"11"%></td>
      </tr>
      <tr>
        <th  class="access">アクセス</th>
        <td><%= f.text_field :access, class:"access", placeholder:"例）大阪駅より徒歩10分"%></td>
      </tr>
      <tr>
        <th  class="capacity">定員数</th>
        <td><%= f.text_field :capacity, class:"capacity", placeholder:"例）50"%></td>
      </tr>
      <tr>
        <th class="category">運営業態</th>
        <td><%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: "選択してください",class:"select-box") %></td>
       </tr>
      <tr>
        <th class="opening-hour">開園時間</th>
        <td><%= f.time_select :open_hour,:minute_step => 15,class:"open-hour",prompt: "--",ignore_data: false %>〜
            <%= f.time_select :close_hour,:minute_step => 15, class:"close-hour",prompt: "--",ignore_data: false %></td>
      </tr>
      <tr>
        <th class="concept">園の特徴</th>
        <td><%= f.text_area :concept, class:"concept", placeholder:"例）たくましい子どもを育てます！"%></td>
      </tr>
      <tr>
        <th class="email">見学日程調整用アドレス</th>
        <td><%= f.text_field :email, class:"email", placeholder:"例）test@test.com"%></td>
      </tr>
       </table>
  <%# 表にする %>
    <ul class="register-btn-contents">
      <li><%= f.submit "投稿する" ,url:preschools_path, class:"register-btn" %></li>
      <li><%= link_to 'もどる', root_path, class:"back-btn" %></li>
    </ul>
  <% end %>
 </div>

