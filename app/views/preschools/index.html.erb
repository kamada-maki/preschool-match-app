<%= render "shared/header" %>

<h1>トップページ</h1><h2>保育園一覧表示</h2>

<%# 検索結果表示 %>
<div class="search-navi">こちらから検索</h1>
<%= search_form_for @q, url: search_path do |f| %>
  <%= f.text_field :name_or_address_or_access_or_concept_cont, placeholder: "キーワードから探す"%>
  <div class="category">運営業態
    <%= f.collection_select(:category_id_eq, Category.where.not(id: 0), :id, :name, include_blank: "運営種別で検索", class: 'search-select') %>
  </div>
  <div class="area">所在地
  <%= f.collection_select(:area_id_eq,  Area.where.not(id: 0), :id, :name, include_blank: "エリアで検索",class: 'search-select') %>
  </div>
  <div>
    <%= f.submit '検索する' ,class:"search-btn"%>
  </div>
<% end %>
</div>
<%# 検索結果表示 %>
<div class='preschool-contents'>
    <ul class='preschool-lists'>
    <li class='list'>
      <% @preschools.each do |preschool| %>
       <%= link_to preschool_path(preschool.id) do %>
       <div class='preschool-img-content'>
        <% preschool.images.each do |image|%>
        <%= image_tag(preschool.images[0], class:"preschool-img")%> 
       </div>
       <div class='preschool-info'>
        <h3 class='preschool-name'><%= preschool.name %></h3>
        <h3 class='preschool-concept'><%= preschool.concept %></h3>
        </div>
      <% end %>
      <% end %>
      <%unless user_signed_in?%>
      <h2>いいね数<%= preschool.likes.count %></h2>
      <%end%>
      <% if user_signed_in? && current_user.already_liked?(preschool) %>
      <div class= "liked_destroy_area">
        <%= link_to "いいね解除", preschool_likes_path(preschool), data: {id: preschool.id}, remote:true, method: :delete, class: "liked_destroy_btn" %>
        <%= preschool.likes.count %>
        </div>
      <% elsif user_signed_in?  %>
      <div class="like_area">
        <%= link_to "いいね！", preschool_likes_path(preschool), data: {id: preschool.id}, remote:true, method: :post, class: "liked_btn" %>
        <%= preschool.likes.count %>
        </div>
        <% end %>
      <% end %>


<% if admin_signed_in? %>
<%= link_to '新規投稿',new_preschool_path, class: 'tweet-btn' %>
<%end%>