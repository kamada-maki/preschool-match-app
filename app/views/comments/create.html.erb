<div class="comments_lists" , id = "comment-list" >
    <div class="comments_list">
      <%= @comment.text%>
      <%= link_to "#{@comment.user.nickname}さん", "/users/#{@comment.user_id}",class: :comment_user %>
    <% if user_signed_in? && current_user.id == @comment.user_id %>
      <div class="comments_manage">
        <%= link_to "編集",  edit_preschool_comment_path(@preschool,@comment), class: :comment_edit__btn %>
        <%= link_to "削除", preschool_comment_path(@preschool,@comment), id:"comment-delete",class: :comment_destroy_btn,method: :delete %>
      </div>
   <% end %>
   </div>
</div>
