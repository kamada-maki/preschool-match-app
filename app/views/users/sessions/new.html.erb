<h2>ログイン（保護者）</h2>

 <%= form_with model: @user, url: user_session_path , local: true do |f| %>
   <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="field">
  <%= f.label :email, "メールアドレス" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
  <%= f.label :password, "パスワード（6文字以上/英数字混合）" %><br />
  <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <div class="actions">
  <%= f.submit "ログイン", class: :form__btn  %>
  </div>
  <% end %>

<%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post%>
